extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th movie-name
                        th movie-doctor
                        th country
                        th year
                        th createAt
                        th watch
                        th update
                        th delete
                    tbody
                        each item in movies
                            tr(class='item-id-#{item._id}')
                                td #{item.title}
                                td #{item.doctor}
                                td #{item.country}
                                td #{item.year}
                                td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                                td
                                    a(target='_blank',href='../movie/#{item._id}') 查看
                                td
                                    a(target='_blank',href='../admin/update/#{item._id}') 修改
                                td
                                    button.btn.bg-danger.del(type='button',data-id='#{item._id}') 删除

    script(src='/js/admin.js')